{
  "name": "telegram-task-bot",
  "version": "1.0.0",
  "main": "src/bot/bot.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "pm2-runtime ecosystem.config.cjs",
    "build-client": "npm --prefix web run build",
    "format": "prettier --write \"src/**/*.js\"",
    "check:mongo": "node ../../scripts/check_mongo.cjs",
    "chaos": "node ../../scripts/chaos.js"
  },
  "postinstall": "npm --prefix web install && npm run build-client && husky install",
  "author": "",
  "license": "ISC",
  "description": "Бот задач с REST API, работающий под управлением pm2",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.837.0",
    "@wgtechlabs/log-engine": "^2.2.0",
    "bcrypt": "^6.0.0",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9",
    "lusca": "^1.7.0",
    "mongoose": "^8.16.0",
    "node-cron": "^4.1.1",
    "pm2": "^6.0.8",
    "prom-client": "^14.2.0",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "telegraf": "^4.16.3",
    "tsyringe": "^4.10.0"
  },
  "overrides": {
    "glob": "^7.2.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.29.0",
    "babel-jest": "^30.0.2",
    "eslint": "^9.29.0",
    "husky": "^9.0.11",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  }
}

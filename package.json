    "@types/supertest": "^2.0.16",
    "@types/multer": "^1.4.7",
    "@types/jsonwebtoken": "^9.0.10",
    "audit-ci": "^7.1.0",
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.29.0",
    "express": "^4.19.2",
    "globals": "^14.0.0",
    "jiti": "^2.5.1",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.14"
  }

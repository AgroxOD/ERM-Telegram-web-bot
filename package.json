{
  "name": "erm-telegram-web-bot",
  "private": true,
  "description": "Вспомогательные зависимости для запуска ESLint и тестов.",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "eslint apps/api/src",
    "a11y": "ts-node scripts/a11y.ts",
    "test:e2e": "playwright test tests/e2e",
    "test:api": "mocha -r ts-node/register tests/api/*.spec.ts",
    "test:unit": "jest",
    "format": "prettier --write .",
    "test": "pnpm test:unit && pnpm test:api && pnpm test:e2e",
    "prepare-client": "./scripts/build_client.sh",
    "size": "size-limit"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/mocha": "^10.0.6",
    "@types/supertest": "^2.0.16",
    "@types/multer": "^1.4.7",
    "@types/jsonwebtoken": "^9.0.10",
    "audit-ci": "^7.1.0",
    "@axe-core/cli": "^4.10.2",
    "@axe-core/playwright": "^4.10.2",
    "@tailwindcss/forms": "^0.5.10",
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.29.0",
    "express": "^4.19.2",
    "globals": "^14.0.0",
    "jiti": "^2.5.1",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.2",
    "size-limit": "^11.1.2",
    "@size-limit/file": "^11.1.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.14"
  },
  "pnpm": {
    "overrides": {
      "glob": "^7.2.3",
      "rimraf": "^6.0.1",
      "uuid": "^9.0.0",
      "quill": "^2.0.3"
    }
  },
  "packageManager": "pnpm@10.15.0",
  "size-limit": [
    {
      "path": "apps/api/public/assets/*.js",
      "limit": "900 KB"
    }
  ]
}

    "format": "prettier --write .",
    "test": "pnpm test:unit && pnpm test:api && pnpm test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",

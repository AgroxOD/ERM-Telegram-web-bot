{
  "name": "erm-telegram-web-bot",
  "private": true,
  "description": "Вспомогательные зависимости для запуска ESLint и тестов.",
  "scripts": {
    "pretest": "pnpm --filter shared build",
    "pretest:unit": "pnpm --filter shared build",
    "pretest:api": "pnpm --filter shared build",
    "pretest:e2e": "pnpm --filter shared build",
    "build": "pnpm -r build",
    "dev": "PNPM_SCRIPT_TIMEOUT=0 pnpm -r dev",
    "lint": "pnpm -r lint",
    "a11y": "ts-node scripts/a11y.ts",
    "test:e2e": "playwright test tests/e2e",
    "test:api": "mocha -r ts-node/register -r tests/setupEnv.ts tests/api/**/*.spec.ts",
    "test:unit": "jest",
    "format": "prettier --write .",
    "test": "pnpm test:unit && pnpm test:api && pnpm test:e2e",
    "prepare-client": "./scripts/build_client.sh",
    "size": "size-limit"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/mocha": "^10.0.6",
    "@types/supertest": "^2.0.16",
    "@types/multer": "^1.4.7",
    "@types/jsonwebtoken": "^9.0.10",
    "audit-ci": "^7.1.0",
    "@axe-core/cli": "^4.10.2",
    "@axe-core/playwright": "^4.10.2",
    "@tailwindcss/forms": "^0.5.10",
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.29.0",
    "express": "^4.19.2",
    "globals": "^14.0.0",
    "jiti": "^2.5.1",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.2",
    "size-limit": "^11.1.2",
    "@size-limit/file": "^11.1.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.14"
  },
  "pnpm": {
    "overrides": {
      "glob": "^7.2.3",
      "rimraf": "^6.0.1",
      "uuid": "^9.0.0",
      "quill": "^2.0.3",
      "jspdf@<3.0.1": ">=3.0.1",
      "@ckeditor/ckeditor5-clipboard@>=40.0.0 <43.1.1": ">=43.1.1",
      "ckeditor5@>=40.0.0 <43.1.1": ">=43.1.1",
      "dompurify@<3.2.4": ">=3.2.4",
      "react-is": "^18.3.1"
    },
    "allowedBuiltDependencies": [
      "esbuild",
      "ffmpeg-static",
      "mongodb-memory-server",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@scarf/scarf",
      "@tailwindcss/oxide",
      "chromedriver",
      "core-js",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.15.0",
  "size-limit": [
    {
      "path": "apps/api/public/assets/*.js",
      "limit": "900 KB"
    }
  ]
}
